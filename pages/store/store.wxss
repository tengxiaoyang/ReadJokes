/* pages/store/store.wxss */
.banner {
  width: 100%;
  position: relative;
  background: #F8F8F8;
}
.banner swiper {
  height: 700rpx;
  display: block;
  background: #F8F8F8;
}
.banner swiper image {
  height: 700rpx;
  width: 100%;
  display: block;
  background: #F8F8F8;
}
.integral {
  position: absolute;
  bottom: 30rpx;
  left: 50rpx;
  color: #00CC66;
  font-size: 30rpx;
}
.product-view {
  background: #F8F8F8;
}
.all_products {
  display: block;
  margin: 0 0 10px 15px;
  padding: 17px 0 0 0;
  font-weight: 700;
}
.product_grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
}
.product_list {
  background: #fff;
  width: 90%;
  height: 500rpx;
  margin: 8px;
}
.photo-view {
  width: 80%;
}