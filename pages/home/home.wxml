<view class="main">
  <view class="joke_list" wx:for="{{jokeList}}" wx:key="index">
    <view class="left-view">
      <image class="icon-view" src="{{item.icon}}"></image> 
    </view>
    <view class="right-view">
      <view class="user-name-view">{{item.name}}</view>
      <view class="content-view">{{item.content}}</view>  
      <image class="photo-view" src="{{item.photo}}" mode="aspectFit"></image> 
      <view class="right-view-bottom">
        <text>{{item.release_time}}</text>
        <image class="favorite_button" src="/images/two_dot.png" bindtap='show_small_stick'>  
          <view class="small_stick" wx:if="{{true_or_false}}"></view>
        </image>
      </view>
    </view> 
  </view>
</view>