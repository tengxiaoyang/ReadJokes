<!-- pages/home/home.wxml -->
<view class="main">
  <view class="joke_list" wx:for="{{jokes_data}}" wx:key="index">
    <view class="left-view">
      <image class="icon-view" src="{{item.icon}}"></image> 
    </view>
    <view class="right-view">
      <view class="user-name-view">{{item.name}}</view>
      <view class="content-view">{{item.content}}</view>  
      <image class="photo-view" src="{{item.photo}}" mode="widthFix"></image> 
      <view class="right-view-bottom">
        <text>{{item.release_time}}</text>
        <image class="favorite_button" src="/images/two_dot.png" bindtap="set_tips">  
          <view class="small_stick" wx:if="{{show_tips}}">
            <image class="like" src="/images/like.png"></image>
            <image class="comment" src="/images/comment.png"></image>
            <image class="star" src="/images/star.png"></image>
          </view>
        </image>
      </view>
    </view> 
  </view>
</view>