/* pages/search/search.wxss */
page {
  background-color: #fff;
}
.top {
  position: fixed;
  width: 100%;
  z-index: 1;
  /* background-color: #E8E8E8; */
}
.search_view {
  width: 90%;
  margin-left: 5%;
  display: flex;
  padding: 2% 0;
  align-items: center;
}
.search_frame {
  background-color: #fff;
  width: 75%;
  border-radius: 20rpx;
  padding: 0 3%;
}
.search_frame input {
  font-size: 24rpx;
  margin: 6rpx 0;
}
.search_view text {
  width: 10%;
  margin-left: 5%;
  color: #585858;
  font-size: 28rpx;
}

.main {
  padding: 0 0 0 0;
  margin: 0 0 0 0;
  position: relative;
  top: 54px
}
.joke_list {
  display: flex;
  padding: 10px 10px 10px 10px;
  border-bottom: 0.02px solid #b3b3b3;
}
.left-view {
  margin: 6px 14px 0 10px;
}
.user-name-view {
  color: #0066CC;
}
.content-view {
  margin: 5px 0;
}
.icon-view {
  width: 40px;
  height: 40px;
  border-radius: 5px;
}
.content-view {
  width: 90%;
}
.photo-view {
  width: 80%;
}
.right-view {
  width: 100%;
  height: 100%;
}
.right-view-bottom {
  display: block;
  position: relative;
  width: 100%;
  padding: 5px 0;
}
.right-view-bottom text {
  font-size: 14px;
  font-weight: 500;
  color: darkgrey ;
}
.favorite_button {
  float: right;
  margin: 5px 10px 5px 0;
  width: 30px;
  height: 20px;
}
.small_stick {
  align-items: center;
  position: absolute;
  bottom: 0px;
  right: 55px;
  width: 140px;
  height: 35px;
  background: #F8F8F8;
  border-radius: 5px;
}
.small_stick .like {
  margin: 5px 10px 0 15px;
  width: 25px;
  height: 25px;
}
.small_stick .comment {
  margin: 5px 10px 0 10px;
  width: 25px;
  height: 25px;
}
.small_stick .star {
  margin: 5px 10px 0 10px;
  width: 25px;
  height: 25px;
}